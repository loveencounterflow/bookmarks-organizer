#!/usr/bin/env bash
# set -ex
set -e
home=$(realpath "$(readlink -f "$0" | xargs dirname)"/..)
cd "$home"

source bin/_bmo-prepare-environment


#-----------------------------------------------------------------------------------------------------------
psql -U bmo --set QUIET=on --set ON_ERROR_STOP=1 -f ./db/update-os-env.sql
PAGER="postgres-pager -s 6 --less-status-bar" psql -U bmo --set QUIET=on --set ON_ERROR_STOP=1 "$@"


